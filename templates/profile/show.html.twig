{% extends 'logged_in_layout.html.twig' %}

{% block title %}{{ 'general.buttons.show'|trans }} {{ 'label.department'|trans }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">{{ level.name }}</h4>

            <div class="body table-responsive">
                <table class="table table-condensed table-bordered">
                    <tbody>
                    <tr>
                        <th>#</th>
                        <td>{{ level.id }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.name'|trans }}</th>
                        <td>{{ level.name }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.comment'|trans }}</th>
                        <td>{{ level.comment }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row clearfix mt-3">
        <div class="col-xs-12">
{#            {{ include('department/_delete_form.html.twig') }}#}
            <div class="btn-group">
                <a href="{{ path('level') }}" class="btn btn-sm btn-secondary">
                    <span>{{ 'general.buttons.back'|trans }}</span>
                </a>
                <a href="{{ path('level_edit', {'id': level.id}) }}" class="btn btn-sm btn-secondary">
                    <span>{{ 'general.buttons.edit'|trans }}</span>
                </a>
            </div>
        </div>
    </div>
{% endblock content %}
