{% extends 'logged_in_layout.html.twig' %}

{% block title %}{{ 'label.level'|trans }} {{ 'label.list'|trans }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-sm-12 col-md-6">
                            <h4 class="card-title">{{ 'label.level'|trans }} {{ 'label.list'|trans }}</h4>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <a href="{{ path('level_new') }}"
                               class="btn btn-primary mt-2 mt-xl-0 float-right">{{ 'general.buttons.new'|trans }}</a>
                        </div>
                    </div>

                    <div class="row grid-margin">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                    <tr class="bg-dark text-white" role="row">
                                        <th>#</th>
                                        <th>{{ 'label.name'|trans }}</th>
                                        <th>{{ 'label.comment'|trans }}</th>
                                        <th>{{ 'label.actions'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for level in paginator %}
                                        <tr role="row" class="odd">
                                            <td>{{ level.id }}</td>
                                            <td>{{ level.name }}</td>
                                            <td>{{ level.comment }}</td>
                                            <td>
                                                <a href="{{ path('level_show', { 'id': level.id }) }}" class="btn btn-sm btn-secondary ml-2">{{ 'general.buttons.show'|trans }}</a>
                                                <a href="{{ path('level_edit', { 'id': level.id }) }}" class="btn btn-sm btn-secondary ml-2">{{ 'general.buttons.edit'|trans }}</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            {% include 'base/paginator.html.twig' with { 'paginator': paginator } only %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
